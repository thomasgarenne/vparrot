{% extends "base.html.twig" %}

{% block title %}Categories Index{% endblock %}

{% block body %}
    <section class="row">
        {% include "_partials/_adminNavbar.html.twig" %}
        <div class="col-9">
        <h2>Liste des Marques</h2>
        <a href="{{ path('admin_brands_new') }}"><button class="btn btn-primary">Ajouter</button></a>
            <table class="table">
                <thead>
                    <th>#</th>
                    <th>Marques</th>
                    <th>Actions</th>
                </thead>
                {% for brand in brands %}
                    <tr>
                        <th scope="row">{{ brand.id }}</thead>
                        <td>{{ brand.name }}</td>
                        <td class="d-flex">
                            <a href="{{ path('admin_brands_show', { 'id': brand.id }) }}">
                                <button class="btn btn-info">Voir</button>
                            </a>
                            <a href="{{ path('admin_brands_edit', { 'id': brand.id }) }}">
                                <button class="btn btn-warning mx-2">Modifier</button>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </section>
{% endblock %}