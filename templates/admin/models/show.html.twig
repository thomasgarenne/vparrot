{% extends "base.html.twig" %}

{% block title %}Models index{% endblock %}

{% block body %}
    <div class="col-9 m-auto my-3">
        <h2>Liste des modèles</h2>
        <a href="{{ path('admin_models_new') }}">
            <button class="btn btn-primary">Ajouter</button>
        </a>
        <table class="table">
            <thead>
                <th>#</th>
                <th>Modèles</th>
                <th>Actions</th>
            </thead>
            <tr>
                <th>{{ model.id }}</th>
                <td>{{ model.name }}</td>
                <td>
                    <a href="{{ path('admin_models_edit', {id: model.id}) }}">
                        <button class="btn btn-warning">Modifier</button>
                    </a>
                    {# {% include "admin/models/_delete.html.twig" %} #}
                </td>
            </tr>
        </table>   

        <a href="{{ path('admin_models_index') }}">
            <button class="btn btn-info">Retour à la liste</button>
        </a>
    </div>

{% endblock %}