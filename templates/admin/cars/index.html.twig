{% extends "base.html.twig" %}

{% block title %}Voiture{% endblock %}

{% block body %}
    <section class="row">
        {% include "_partials/_adminNavbar.html.twig" %}
        <div class="col-9">
        <h2>Liste des voitures</h2>
        <a href="{{ path('admin_cars_new') }}"><button class="btn btn-primary">Ajouter</button></a>
        
            <table class="table">
                <thead>
                    <th>#</th>
                    <th>Type</th>
                    <th>Marque</th>
                    <th>Modèle</th>
                    <th>Year</th>
                    <th>Km</th>
                    <th>Moteur</th>
                    <th>Puissance</th>
                    <th>Couleur</th>
                </thead>
                {% for car in cars %}
                    <tr>
                        <th scope="row">{{ car.id }}</th>
                        <td>{{ car.type.id }}</td>
                        <td>{{car.getModel.getBrand.name}}</td>
                        <td>{{ car.getModel.name }}</td>
                        <td>{{ car.year.format('Y-m-d') }}</td>
                        <td>{{ car.km }}</td>
                        <td>{{ car.motor }}</td>
                        <td>{{ car.power }}</td>
                        <td>{{ car.color }}</td>
                        
                        <td class="d-flex">
                            <a href="{{ path('admin_cars_show', {'id': car.id}) }}"><button class="btn btn-info mx-2">Détails</button></a>
                            <a href="{{ path('admin_cars_edit', {'id': car.id}) }}"><button class="btn btn-warning">Modifier</button></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </section>
{% endblock %}