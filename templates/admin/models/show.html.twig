{% extends "base.html.twig" %}

{% block title %}Models index{% endblock %}

{% block body %}
    <div class="w-75 m-auto min-vh-100">
        <h2>Liste des modèles</h2>
        <div class="table-responsive">
        <table class="table">
            <thead>
                <th>#</th>
                <th>Modèles</th>
                <th>Actions</th>
            </thead>
            <tr>
                <th>{{ model.id }}</th>
                <td>{{ model.name }}</td>
                <td>
                    <a href="{{ path('admin_models_edit', {id: model.id}) }}">
                        <button class="btn btn-warning">Modifier</button>
                    </a>
                    {# {% include "admin/models/_delete.html.twig" %} #}
                </td>
            </tr>
        </table> 
        </div>  

        <a href="{{ path('admin_models_index') }}">
            <button class="btn btn-info mt-2">Retour à la liste</button>
        </a>
    </div>

{% endblock %}